<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.glydenet.jusspay.CircularImageView
        android:id="@+id/circularImageViewRecipients"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />
    
    <TextView
        android:id="@+id/textViewRecipients"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circularImageViewRecipients"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="@string/recipients_name_placeholder"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
